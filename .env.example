# GearVue Equipment Tracker Environment Variables
# Example configuration file - Copy this to .env and customize

# Application Settings
PORT=5000
FLASK_ENV=production
APPLICATION_URL=http://localhost:5000
TZ=America/Chicago

# Mail Settings
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_USE_TLS=True
MAIL_DEFAULT_SENDER=equipment-tracker@example.com

# Docker Settings
TAG=latest